<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <com.lockwood.compound.CompoundTextView
        android:id="@+id/compound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas a laoreet augue, ut lobortis tortor. Praesent nunc leo, imperdiet vel consequat at, consectetur nec nunc. "
        app:drawableBottom="@drawable/cat"
        app:drawableEnd="@drawable/cat"
        app:drawableSize="42dp"
        app:drawableStart="@drawable/cat"
        app:drawableTop="@drawable/cat"
        app:handleClickWithinDrawableBounds="true"
        tools:drawableBottom="@drawable/ic_placeholder"
        tools:drawableEnd="@drawable/ic_placeholder"
        tools:drawableGravity="center"
        tools:drawablePadding="32dp"
        tools:drawableStart="@drawable/ic_placeholder"
        tools:drawableTop="@drawable/ic_placeholder" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drawable gravity" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/gravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Attached to text" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/attachedToText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Drawable padding" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>